{
  "extends": "node-services",
  "rules": {
    // These are somewhat agreed upon explicit divergences.
    "indent": [2, "tab", {
      "SwitchCase": 1,
      "MemberExpression": "off",
      "CallExpression": { "arguments": "off" },
      "flatTernaryExpressions": true
    }],
    "one-var": [2, { "initialized": "never" }],

    // The rest should be fixed up, gradually.
    "max-len": 0,
    "vars-on-top": 0,
    "wrap-iife": 0,
    "object-shorthand": 0,
    "func-style": 0,
    "multiline-ternary": 0,
    "sort-vars": 0,
    "default-case": 0,
    "consistent-this": 0,
    "guard-for-in": 0,

    "prefer-arrow-callback": 0,
    "prefer-template": 0,

    "no-tabs": 0,
    "no-var": 0,
    "no-console": 0,
    "no-control-regex": 0,
    "no-useless-concat": 0,
    "no-useless-escape": 0,
    "no-invalid-this": 0,
    "no-prototype-builtins": 0,
    "no-loop-func": 0,
    "no-throw-literal": 0,
    "no-lonely-if": 0,
    "no-nested-ternary": 0,
    "no-unmodified-loop-condition": 0,

    "no-buffer-constructor": 1,

    "jsdoc/newline-after-description": [0, "never"],
  }
}
